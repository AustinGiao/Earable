{
  "seed": 0,

  "train_dataset":
  {
    "train_dir": "./dataset/json/tr",
    "sample_rate": 8000,
    "segment": 5,
  },

  "validation_dataset":
  {
    "validation_dir": "./dataset/json/cv",
    "sample_rate": 8000,
    "segment": 5,
  },

  "train_loader":
  {
   "batch_size": 4,
   "shuffle": true,
   "num_workers": 4,
  },

  "validation_loader":
  {
    "batch_size": 1,
    "shuffle": false,
    "num_workers": 4,
  },

  "model": 'sepformer',

  "train":
  {
    "use_cuda": false,
    "epochs": 100,
    "half_lr": true,
    "early_stop": true,
    "max_norm": 5,
  },

  "optimizer":
  {
    "type": "adamp",

    "sgd":
    {
      "lr": 0.125,
      "momentum": 0.0,
      "l2": 0.0,
    },

    "adam":
    {
      "lr": 0.0125,
      "beta1": 0.9,
      "beta2": 0.999
    },

    "sgdp":
    {
      "lr":0.1,
      "weight_decay":1e-5,
      "momentum":0.9,
      "nesterov":true
    },

    "adamp":
    {
      "lr":0.00001,
      "beta1":0.9,
      "beta2":0.999,
      "weight_decay":1e-2,
    }
  },

  "save_load":
  {
    "save_folder": "./checkpoint/",
    "checkpoint": true,
    "model_path": "final.pth",
  },

  "logging":
  {
    "print_freq": 20,
  }
}
